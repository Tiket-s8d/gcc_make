{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "shell: gcc.exe",
            "command": "gcc",
            "args": [
                "${file}","-g","-o","${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
        ,{
            "type": "shell",
            "label": "shell: gcc.exe builds many files",
            "command": "gcc",
            "args": [
                "-g","${file}","-I","${fileDirname}\\Inc\\","${fileDirname}\\Src\\*.c","-o","${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
           
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        
    
    ]
}